<ConstantsSection label="pixbarlayer3.xml" eval="true">
 <Constant name="Ladders"           value="64"/> 
 <Constant name="CoolDist"          value="16.0*cm"/>
 <Constant name="CoolWidth"         value="0.3283*cm"/>
 <Constant name="OuterFirst"        value="-1"/>
